<section id="steps" class="section steps">
  <div class="container">
    <h2>{{ section_data.title or "Cómo Funciona Nuestro Servicio" }}</h2>
    <div class="steps-grid">
      {% for step in section_data.steps or [
        {number:1, title:"Paso 1", text:"Analizamos tus necesidades para ofrecerte la mejor solución."},
        {number:2, title:"Paso 2", text:"Creamos un diseño profesional y adaptado a tu branding."},
        {number:3, title:"Paso 3", text:"Implementamos tu landing con tecnología moderna y optimizada."},
        {number:4, title:"Paso 4", text:"Revisamos, entregamos y damos soporte para que crezca tu negocio."}
      ] %}
        <div class="step-card animate-on-scroll" style="--delay: {{ loop.index0 * 0.2 }}s;">
          <div class="step-number">{{ step.number }}</div>
          <h3>{{ step.title }}</h3>
          <p>{{ step.text }}</p>
          <span class="step-arrow"></span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
