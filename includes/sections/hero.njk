<section class="hero" id="hero">
  <!-- Videos -->
  <video class="hero-video hero-desktop" autoplay muted loop playsinline>
    <source src="/assets/videos/heroDesktop.webm" type="video/webm">
    <source src="/assets/videos/heroDesktop.mp4" type="video/mp4">
  </video>
  <video class="hero-video hero-mobile" autoplay muted loop playsinline>
    <source src="/assets/videos/heroMobile.mp4" type="video/mp4">
  </video>

  <!-- Overlay con gradiente animado -->
  <div class="hero-overlay"></div>
  <div class="hero-fallback"></div>

  <!-- Partículas flotantes -->
  <canvas id="heroParticles" class="hero-particles"></canvas>

  <!-- Contenedor central -->
  <div class="hero-content-wrapper">
    <div class="hero-content">
      <h1 class="fade-left animate-on-scroll">{{ section_data.title or landing.title or "Crea tu Landing Profesional" }}</h1>
      <p class="fade-left delay-1 animate-on-scroll">{{ section_data.subtitle or landing.description or "Convierte visitantes en clientes con diseño y tecnología profesional." }}</p>

      {% if section_data.ctas %}
        {% for cta in section_data.ctas %}
          <a href="{{ cta.url }}" class="btn-primary fade-left delay-2 scroll-link animate-on-scroll">{{ cta.text }}</a>
        {% endfor %}
      {% else %}
        <a href="#benefits" class="btn-primary fade-left delay-2 scroll-link animate-on-scroll">Comenzar Ahora</a>
      {% endif %}
    </div>
  </div>
</section>
