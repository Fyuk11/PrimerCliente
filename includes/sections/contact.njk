<section id="contact" class="section contact animate-on-scroll">
  <canvas id="contactParticles" class="contact-particles"></canvas>

  <div class="container contact__grid">
    <div class="contact__info">
      <h2>{{ section_data.title or "Ponete en contacto" }}</h2>
      <p>{{ section_data.text or "¿Tenés dudas o querés más información? Completá el formulario y te responderemos a la brevedad." }}</p>
      <ul class="contact__details">
        <li><strong>Email:</strong> <span>traduccioncreativadigital@gmail.com</span></li>
        <li><strong>Teléfono:</strong> +54 11 2165-2703</li>
      </ul>
    </div>

    <div class="contact__form">
  <form 
    name="contact" 
    method="POST" 
    data-netlify="true" 
    netlify-honeypot="bot-field"
  >
    <!-- honeypot oculto -->
    <input type="hidden" name="form-name" value="contact">
    <p style="display:none;">
      <label>No completar: <input name="bot-field"></label>
    </p>

    <div class="form-group">
      <label for="name">Nombre</label>
      <input type="text" id="name" name="name" required>
    </div>

    <div class="form-group">
      <label for="email">Correo electrónico</label>
      <input type="email" id="email" name="email" required>
    </div>

    <div class="form-group">
      <label for="message">Mensaje</label>
      <textarea id="message" name="message" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn">Enviar</button>
  </form>

  <!-- Mensaje de confirmación -->
  <div id="form-success" class="form-success" style="display:none;">
    ✅ ¡Gracias por tu mensaje! Te responderemos a la brevedad.
  </div>
</div>

  </div>
</section>
