<section id="about" class="section about animate-on-scroll">
  <div class="container about__grid">
    
    <div class="about__content">
      <h2>{{ section_data.title }}</h2>
      <p>{{ section_data.text }}</p>
      {% if section_data.extra_text %}
        <p>{{ section_data.extra_text }}</p>
      {% endif %}
    </div>

    <div class="about__slideshow">
      <div class="slideshow">
        {% for img in section_data.images %}
          <div class="slide{% if loop.first %} active{% endif %}">
            <img src="{{ img }}" alt="Imagen sobre la marca">
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
</section>
