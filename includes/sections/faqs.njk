{# sections/faqs.njk - Actualizado para el ebook #}
<section class="faqs" id="faqs">
  <div class="container">
    <div class="faqs-content">
      
      <!-- TÃ­tulo -->
      <h2 class="section-title fade-up animate-on-scroll">
        {{ section_data.title }}
      </h2>

      <!-- Grid de FAQs -->
      <div class="faqs-grid">
        {% for item in section_data.items %}
        <div class="faq-card fade-up delay-{{ loop.index }} animate-on-scroll">
          <div class="faq-question" data-faq-index="{{ loop.index0 }}">
            <h3>{{ item.question }}</h3>
            <span class="toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>{{ item.answer }}</p>
          </div>
        </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>